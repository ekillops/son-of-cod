@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Mailing List";
}

@model SonOfCod.Models.Contact

<h3>Join Mailing List</h3>

<form asp-controller="MailingList" asp-action="Join" method="post">
    <div asp-validation-summary="ModelOnly" class="red-text"></div>
    <div class="row">
        <div class="input-field col s12">
            <input asp-for="Email">
            <span asp-validation-for="Email" class="red-text"></span>
            <label asp-for="Email"></label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6">
            <input asp-for="FirstName">
            <span asp-validation-for="FirstName" class="red-text"></span>
            <label asp-for="FirstName">First Name (optional)</label>
        </div>
        <div class="input-field col s6">
            <input asp-for="LastName">
            <span asp-validation-for="LastName" class="red-text"></span>
            <label asp-for="LastName"> Last Name (optional)</label>
        </div>
    </div>

    <input type="submit" class="waves-effect waves-light btn blue darken-4" value="Submit" />
</form>
